# KweliVote Environment Template
# Copy this file to .env or .env.development for local configuration

# Avalanche Network Configuration
# For Fuji Testnet
REACT_APP_AVALANCHE_API=https://api.avax-test.network
REACT_APP_AVALANCHE_CHAIN_ID=43113
REACT_APP_AVALANCHE_RPC_ENDPOINT=https://api.avax-test.network/ext/bc/C/rpc

# For Mainnet (uncomment when ready for production)
# REACT_APP_AVALANCHE_API=https://api.avax.network
# REACT_APP_AVALANCHE_CHAIN_ID=43114
# REACT_APP_AVALANCHE_RPC_ENDPOINT=https://api.avax.network/ext/bc/C/rpc

# Smart Contract Configuration
# Add your smart contract address after deployment
REACT_APP_VOTER_DID_CONTRACT_ADDRESS=

# Subnet Configuration
REACT_APP_DEFAULT_SUBNET_NAME=KweliVoteSubnet
REACT_APP_DEFAULT_BLOCKCHAIN_NAME=KweliVoteChain
REACT_APP_DEFAULT_TOKEN_NAME=KweliToken
REACT_APP_DEFAULT_TOKEN_SYMBOL=KLI
REACT_APP_DEFAULT_TOKEN_DECIMALS=18
REACT_APP_DEFAULT_MINT_ALLOWANCE=1000000

# Admin Configuration 
# WARNING: Never commit your actual private key to version control
# This should be a test wallet private key for development only
REACT_APP_ADMIN_PRIVATE_KEY=

# API Configuration
# Base URL for the backend API
REACT_APP_API_BASE_URL=http://127.0.0.1:8000

# Fingerprint Reader Client URI (for WebAPI communication)
REACT_APP_FINGERPRINT_CLIENT_URI=http://172.19.0.1:15896